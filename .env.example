# Environment Variables for Elementor Block Generator Development (Windows)
# Copy this file to .env and fill in your values

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_NAME=Elementor Block Generator

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8000
ENVIRONMENT=development

# WordPress / Elementor Configuration
WORDPRESS_URL=http://localhost:8000
WORDPRESS_DB_HOST=localhost
WORDPRESS_DB_NAME=elementor_dev
WORDPRESS_DB_USER=root
WORDPRESS_DB_PASSWORD=

# Elementor Settings
ELEMENTOR_VERSION=latest
ELEMENTOR_PRO_LICENSE_KEY=

# API Configuration
API_BASE_URL=http://localhost:8000/api
API_KEY=
API_SECRET=

# File Paths (Windows style)
PROJECT_ROOT=C:\path\to\elementor_block_generator
UPLOADS_DIR=C:\path\to\elementor_block_generator\uploads
TEMP_DIR=%TEMP%\elementor_block_generator
LOGS_DIR=C:\path\to\elementor_block_generator\logs

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=elementor_blocks
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=elementor_

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=no-reply@localhost
MAIL_FROM_NAME="Elementor Block Generator"

# Development Tools
ENABLE_DEBUG_BAR=true
ENABLE_QUERY_LOG=true
ENABLE_ERROR_LOG=true

# NPM/Build Configuration
NODE_ENV=development
WEBPACK_MODE=development

# Security
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_MINUTES=15
